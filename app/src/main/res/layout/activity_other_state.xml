                android:textStyle="bold"
                android:backgroundTint="#1D31A3"/>

            <Button
                android:id="@+id/btnMR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MIZORAM"
                android:textStyle="bold"
                android:textColor="#FFEB3B"
                android:backgroundTint="#1D31A3"/>

            <Button
                android:id="@+id/btnMP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MP"
                android:textStyle="bold"
                android:textColor="#FFEB3B"
                android:backgroundTint="#1D31A3"/>

            <Button
                android:id="@+id/btnNL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAGALAND"
                android:textStyle="bold"
                android:textColor="#FFEB3B"
                android:backgroundTint="#1D31A3"/>

            <Button
