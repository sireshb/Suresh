<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtherState">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFEB3B"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnAP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ANDHRA"
                android:textColor="#1D31A3"
                android:textSize="15sp"
                android:textStyle="bold"
                android:backgroundTint="#FFEB3B"/>


            <Button
                android:id="@+id/btnAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="ARUNACHAL"
                android:textColor="#1D31A3"
                android:backgroundTint="#FFEB3B"/>

            <Button
                android:id="@+id/btnAS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="ASSAM"
                android:textColor="#1D31A3"
                android:textStyle="bold"
                android:backgroundTint="#FFEB3B"/>

            <Button
                android:id="@+id/btnBR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BIHAR"
                android:textColor="#1D31A3"
                android:textStyle="bold"
                android:backgroundTint="#FFEB3B"/>

            <Button
                android:id="@+id/btnCG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHATTISGARH"
                android:textColor="#1D31A3"
                android:textStyle="bold"
                android:backgroundTint="#FFEB3B"/>

            <Button
                android:id="@+id/btnDL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DELHI"
                android:textColor="#1D31A3"
                android:textStyle="bold"
                android:backgroundTint="#FFEB3B"/>

            <Button
                android:id="@+id/btnGA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GOA"
                android:textColor="#1D31A3"
                android:textStyle="bold"
                android:backgroundTint="#FFEB3B"/>

            <Button
                android:id="@+id/btnGJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GUJARAT"
                android:textColor="#1D31A3"
                android:textStyle="bold"
                android:backgroundTint="#FFEB3B"/>

            <Button
                android:id="@+id/btnHR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HARYANA"
                android:textColor="#1D31A3"
                android:textStyle="bold"
                android:backgroundTint="#FFEB3B"/>

            <Button
                android:id="@+id/btnHP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIMACHAL"
                android:textColor="#1D31A3"
                android:textStyle="bold"
                android:backgroundTint="#FFEB3B"/>

            <Button
                android:id="@+id/btnJR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JHARKHAND"
                android:textColor="#1D31A3"
                android:textStyle="bold"
                android:backgroundTint="#FFEB3B"/>

            <Button
                android:id="@+id/btnJK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JAMMUKASHMIR"
                android:textColor="#1D31A3"
