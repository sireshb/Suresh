                android:textColor="#1D31A3"
                android:textStyle="bold"
                android:backgroundTint="#FFEB3B"/>

            <Button
                android:id="@+id/btnMH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAHARASHTRA"
                android:textColor="#1D31A3"
                android:textStyle="bold"
                android:backgroundTint="#FFEB3B"/>

            <Button
                android:id="@+id/btnMN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
