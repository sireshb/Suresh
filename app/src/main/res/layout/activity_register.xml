<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    tools:ignore="NamespaceTypo">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_register_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#0B0B0B"
            android:layout_marginTop="30dp"
            android:text="REGISTER"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            tools:ignore="HardcodedText" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_register_fullname"
            android:layout_below="@id/tv_register_head"
            android:text="fullname"
            android:padding="6dp"
            android:textColor="#0B0909"
            android:textSize="16sp"
            android:layout_marginTop="30dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/edt_register_Fullname"
            android:hint="enter your fullname"
            android:textColorHint="#9a9c9c"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:padding="6dp"
            android:background="@drawable/border"
            android:layout_below="@id/tv_register_fullname"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_register_email"
            android:layout_below="@id/edt_register_Fullname"
            android:text="email"
            android:padding="6dp"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/edt_register_Email"
            android:textColorHint="#9a9c9c"
            android:textColor="@color/black"
            android:hint="enter your email"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:padding="6dp"
            android:background="@drawable/border"
            android:layout_below="@id/tv_register_email"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_register_dob"
            android:layout_below="@id/edt_register_Email"
            android:text="Dateofbirth(dd/mm/yyyy)"
            android:padding="6dp"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/edt_register_dob"
            android:hint="enter your date of birth(dd/mm/yy)"
            android:inputType="date"
            android:textColorHint="#9a9c9c"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="6dp"
            android:background="@drawable/border"
            android:layout_below="@id/tv_register_dob"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_register_country"
            android:layout_below="@id/edt_register_dob"
            android:text="COUNTRY"
            android:padding="6dp"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/radio_group_register_country"
            android:layout_below="@id/tv_register_country">

            <RadioButton
                android:id="@+id/radio_india"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="INDIA"
                android:textColor="#555555"
                android:textSize="16sp" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_nepal"
                android:text="NEPAL"
                android:textSize="16sp"
                android:textColor="#555555"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_bhutan"
                android:text="BHUTAN"
                android:textSize="16sp"
                android:textColor="#555555"/>
        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_register_mob"
            android:layout_below="@id/radio_group_register_country"
            android:text="Mobile"
            android:padding="6dp"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/edt_register_mob"
            android:hint="enter your mobile number"
            android:inputType="phone"
            android:textColorHint="#9a9c9c"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="6dp"
            android:background="@drawable/border"
            android:layout_below="@id/tv_register_mob"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_register_password"
            android:layout_below="@id/edt_register_mob"
            android:text="Password"
            android:padding="6dp"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/edt_register_password"
            android:hint="enter your password)"
            android:textColorHint="#9a9c9c"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:padding="6dp"
            android:background="@drawable/border"
            android:layout_below="@id/tv_register_password"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_register_confirm_password"
            android:layout_below="@id/edt_register_password"
            android:text="Confirm_Password"
            android:padding="6dp"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/edt_register_confirm_password"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:textColorHint="#9a9c9c"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="6dp"
            android:background="@drawable/border"
            android:layout_below="@id/tv_register_confirm_password"/>
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_register_confirm_password"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="70dp"
            android:text="Register" />


        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressbar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="10dp"
            android:visibility="gone"/>
    </RelativeLayout>
</ScrollView>
